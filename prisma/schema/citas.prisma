model Cita {
  id             String    @id @default(cuid())
  fecha          DateTime
  descripcion    String?
  datos          String
  estado         EstadoCita @default(PENDIENTE)

  createdAt      DateTime  @default(now()) @map("creado_en")
  updatedAt      DateTime  @updatedAt @map("actualizado_en")

  @@map("citas")
}

enum EstadoCita {
  PENDIENTE
  CONFIRMADA
  CANCELADA
  COMPLETADA
}